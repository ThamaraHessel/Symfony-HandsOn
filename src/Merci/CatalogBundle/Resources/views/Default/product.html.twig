{% extends '::base.html.twig' %}

{% block title %}
    {{ product.name ~ parent() }}
{% endblock %}

{% block body %}
  <div class="container">
    <div class="row">

        <div class="media col-md-9">
          <h2>{{ product.name }}</h2>
          <div class="pull-left thumbnail">
            <img class="media-object" src="{{ asset(product.imagePath) }}" alt="{{ product.name }}">
          </div>
          <div class="media-body">
            {{ product.description }}
          </div>
          <h2>R$ {{ product.price }}</h2>
          <a href="{{ path('cart_add', {id: product.id}) }}" class="btn btn-success btn-lg">Colocar no Carrinho</a>
        </div>

    </div>
  </div>
{% endblock %}
